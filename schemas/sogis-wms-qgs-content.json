{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/simi-so/json2qgs/raw/master/schemas/sogis-wms-qgs-content.json",
  "title": "SOGIS json2qgs data",
  "type": "object",
  "properties": {
    "$schema": {
      "title": "JSON Schema",
      "description": "Reference to JSON schema of this document",
      "type": "string",
      "format": "uri",
      "default": "https://github.com/simi-so/json2qgs/raw/master/schemas/sogis-wms-qgs-content.json"
    },
    "wms_top_layers": {
      "title": "WMS top layers",
      "type": "array",
      "items": {
        "title": "Layer name",
        "type": "string"
      }
    },
    "layers": {
      "title": "WMS layers",
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#/definitions/productset"
          },
          {
            "$ref": "#/definitions/vector_layer"
          },
          {
            "$ref": "#/definitions/raster_layer"
          },
          {
            "$ref": "#/definitions/wms_layer"
          },
          {
            "$ref": "#/definitions/wmts_layer"
          }
        ]
      }
    },
    "print_templates": {
      "title": "Print Templates",
      "type": "array",
      "items": {
        "title": "Print Composer template",
        "type": "object",
        "properties": {
          "template_base64": {
            "description": "Print Composer template in Base64 encoding",
            "type": "string",
            "contentEncoding": "base64"
          },
          "template_assets": {
            "title": "Assets list used by the template",
            "type": "array",
            "items": {
              "title": "QPT assets",
              "type": "object",
              "properties": {
                "path": {
                  "description": "Asset path relative to QGIS project file",
                  "type": "string"
                },
                "base64": {
                  "description": "QPT asset in Base64 encoding",
                  "type": "string",
                  "contentEncoding": "base64"
                }
              },
              "required": [
                "path",
                "base64"
              ]
            }
          }
        },
        "required": [
          "template_base64"
        ]
      }
    },
    "selection_color": {
      "title": "Selection color as RGBA",
      "type": "array",
      "items": {
        "type": "integer"
      },
      "minItems": 4,
      "maxItems": 4
    },
    "wms_max_width": {
      "title": "Maximum width for WMS",
      "type": [
        "integer",
        "null"
      ]
    },
    "wms_max_height": {
      "title": "Maximum height for WMS",
      "type": [
        "integer",
        "null"
      ]
    },
    "wms_metadata": {
      "title": "Metadata for WMS GetCapabilities",
      "type": "object",
      "properties": {
        "service_name": {
          "type": [
            "string",
            "null"
          ]
        },
        "service_title": {
          "type": [
            "string",
            "null"
          ]
        },
        "service_abstract": {
          "type": [
            "string",
            "null"
          ]
        },
        "keywords": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "online_resource": {
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        },
        "contact_person": {
          "type": [
            "string",
            "null"
          ]
        },
        "contact_organization": {
          "type": [
            "string",
            "null"
          ]
        },
        "contact_position": {
          "type": [
            "string",
            "null"
          ]
        },
        "contact_phone": {
          "type": [
            "string",
            "null"
          ]
        },
        "contact_mail": {
          "type": [
            "string",
            "null"
          ],
          "format": "email"
        },
        "fees": {
          "type": [
            "string",
            "null"
          ]
        },
        "access_constraints": {
          "type": [
            "string",
            "null"
          ]
        },
        "root_name": {
          "type": [
            "string",
            "null"
          ]
        },
        "root_title": {
          "type": [
            "string",
            "null"
          ]
        },
        "crs_list": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "bbox": {
          "$ref": "#/definitions/bbox"
        }
      }
    }
  },
  "required": [
    "wms_top_layers",
    "layers"
  ],
  "definitions": {
    "productset": {
      "title": "Productset",
      "type": "object",
      "properties": {
        "name": {
          "description": "WMS group layer name",
          "type": "string"
        },
        "type": {
          "description": "Layer type",
          "type": "string",
          "const": "productset"
        },
        "title": {
          "description": "Group title",
          "type": "string"
        },
        "sublayers": {
          "description": "List of sublayer identifiers",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name",
        "type",
        "title",
        "sublayers"
      ]
    },
    "vector_layer": {
      "title": "Vector layer",
      "type": "object",
      "properties": {
        "name": {
          "description": "Layer name",
          "type": "string"
        },
        "type": {
          "description": "Layer type",
          "type": "string",
          "const": "layer"
        },
        "title": {
          "description": "Layer title",
          "type": "string"
        },
        "datatype": {
          "description": "Data type",
          "type": "string",
          "const": "vector"
        },
        "postgis_datasource": {
          "type": "object",
          "properties": {
            "dbconnection": {
              "description": "PostGIS connection as in QGIS datasource. Example: service=sogis_services",
              "type": "string"
            },
            "schema": {
              "type": "string"
            },
            "table": {
              "type": "string"
            },
            "unique_key": {
              "type": "string"
            },
            "geometry_field": {
              "type": "string"
            },
            "geometry_type": {
              "type": "string",
              "enum": [
                "POINT",
                "LINESTRING",
                "POLYGON",
                "MULTIPOINT",
                "MULTILINESTRING",
                "MULTIPOLYGON"
              ]
            },
            "srid": {
              "type": "integer"
            }
          },
          "required": [
            "dbconnection",
            "schema",
            "table",
            "unique_key",
            "geometry_field",
            "geometry_type",
            "srid"
          ]
        },
        "qml_base64": {
          "description": "Vector QML in Base64 encoding",
          "type": "string",
          "contentEncoding": "base64"
        },
	"dimension": {
	  "description": "WMS Time Dimension",
	  "type": "string"
	},
        "qml_assets": {
          "title": "QML assets",
          "type": "array",
          "items": {
            "title": "QML assets",
            "type": "object",
            "properties": {
              "path": {
                "description": "Asset path as defined in QML from 'qml_base64'",
                "type": "string"
              },
              "base64": {
                "description": "QML asset in Base64 encoding",
                "type": "string",
                "contentEncoding": "base64"
              }
            },
            "required": [
              "path",
              "base64"
            ]
          }
        },
        "attributes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "description": "Attribute name",
                "type": "string"
              },
              "alias": {
                "type": "string"
              }
            },
            "required": [
              "name"
            ]
          }
        },
        "bbox": {
          "$ref": "#/definitions/bbox"
        }
      },
      "required": [
        "name",
        "type",
        "title",
        "datatype",
        "postgis_datasource"
      ]
    },
    "raster_layer": {
      "title": "Raster layer",
      "type": "object",
      "properties": {
        "name": {
          "description": "Layer name",
          "type": "string"
        },
        "type": {
          "description": "Layer type",
          "type": "string",
          "const": "layer"
        },
        "title": {
          "description": "Layer title",
          "type": "string"
        },
        "datatype": {
          "description": "Data type",
          "type": "string",
          "const": "raster"
        },
        "raster_datasource": {
          "type": "object",
          "properties": {
            "datasource": {
              "description": "Path to raster data",
              "type": "string"
            },
            "srid": {
              "type": "integer"
            }
          },
          "required": [
            "datasource",
            "srid"
          ]
        },
        "qml_base64": {
          "description": "Raster QML in Base64 encoding",
          "type": "string",
          "contentEncoding": "base64"
        },
        "bbox": {
          "$ref": "#/definitions/bbox"
        }
      },
      "required": [
        "name",
        "type",
        "title",
        "datatype",
        "raster_datasource"
      ]
    },
    "wms_layer": {
      "title": "External WMS layer",
      "type": "object",
      "properties": {
        "name": {
          "description": "Layer name",
          "type": "string"
        },
        "type": {
          "description": "Layer type",
          "type": "string",
          "const": "layer"
        },
        "title": {
          "description": "Layer title",
          "type": "string"
        },
        "datatype": {
          "description": "Data type",
          "type": "string",
          "const": "wms"
        },
        "wms_datasource": {
          "type": "object",
          "properties": {
            "wms_url": {
              "type": "string"
            },
            "layers": {
              "type": "string"
            },
            "format": {
              "type": "string"
            },
            "styles": {
              "type": "string"
            },
            "srid": {
              "type": "integer"
            },
            "featureCount": {
              "type": "integer"
            }
          },
          "required": [
            "wms_url",
            "layers",
            "format",
            "srid"
          ]
        },
        "bbox": {
          "description": "Overall extent of WMS, also used as default extent for layers",
          "$ref": "#/definitions/bbox"
        }
      },
      "required": [
        "name",
        "type",
        "title",
        "datatype",
        "wms_datasource"
      ]
    },
    "wmts_layer": {
      "title": "External WMTS Layer",
      "type": "object",
      "properties": {
        "name": {
          "description": "Layer name",
          "type": "string"
        },
        "type": {
          "description": "Layer type",
          "type": "string",
          "const": "layer"
        },
        "title": {
          "description": "Layer title",
          "type": "string"
        },
        "datatype": {
          "description": "Data type",
          "type": "string",
          "const": "wmts"
        },
        "wmts_datasource": {
          "type": "object",
          "properties": {
            "wmts_capabilities_url": {
              "type": "string"
            },
            "layer": {
              "type": "string"
            },
            "style": {
              "type": "string"
            },
            "tile_dimensions": {
              "type": "string"
            },
            "tile_matrix_set": {
              "type": "string"
            },
            "srid": {
              "type": "integer"
            },
            "format": {
              "type": "string"
            }
          },
          "required": [
            "wmts_capabilities_url",
            "layer",
            "style",
            "tile_matrix_set",
            "srid",
            "format"
          ]
        },
        "bbox": {
          "$ref": "#/definitions/bbox"
        }
      },
      "required": [
        "name",
        "type",
        "title",
        "datatype",
        "wmts_datasource"
      ]
    },
    "bbox": {
      "title": "Bounding box",
      "type": "object",
      "properties": {
        "bounds": {
          "description": "Extent as [minx, miny, maxx, maxy]",
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 4,
          "maxItems": 4
        },
        "srid": {
          "type": "integer"
        }
      },
      "required": [
        "bounds",
        "srid"
      ]
    }
  }
}
